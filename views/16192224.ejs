<%- include('meta', { currentPage: 'admin' }) %>
<%- include('header') %>

<main role="main">
    <div class="admin-container container">
        <div class="admin-header">
            <h1 class="admin-title"><%= title %></h1>
            <div>
                <a href="/16192224/add" class="btn btn-primary">Add New Post</a>
            </div>
        </div>

        <div id="mainContent">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div></div>
                <div class="post-count">Total Posts: <%= posts.length %></div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach(post => { %>
                            <tr>
                                <td><%= post.title %></td>
                                <td><%= post.content.replace(/<\/?[^>]+(>|$)/g, "").substring(0, 130) %><%= post.content.length > 130 ? '...' : '' %></td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/16192224/edit?postId=<%= post.id %>" class="btn btn-primary">E</a>
                                        <a href="/16192224/delete/<%= post.id %>" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this post?');">D</a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <a href="/" class="btn btn-secondary back-btn">Back to Home</a>
    </div>
</main>

<%- include('footer') %>