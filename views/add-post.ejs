<%- include('meta', { currentPage: 'admin' }) %>
<%- include('header') %>

<main role="main">
  <div class="admin-container container">
    <div class="admin-header">
      <h1 class="admin-title"><i class="fas fa-pen-fancy"></i> Add New Post</h1>
      <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>
    <p class="subtitle">Create engaging content for your audience</p>

    <form action="/16192224/add" method="POST" enctype="multipart/form-data" id="addPostForm">
            
            <!-- Basic Info Section -->
            <div class="section-title"><i class="fas fa-info-circle"></i> Basic Information</div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="title">Post Title <span class="required">*</span></label>
                    <input type="text" id="title" name="title" required placeholder="Enter an engaging title">
                    <div class="help-text">This will also be used to generate the post slug</div>
                </div>
                
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="General">General</option>
                        <option value="Technology">Technology</option>
                        <option value="Tutorial">Tutorial</option>
                        <option value="News">News</option>
                        <option value="Review">Review</option>
                        <option value="Announcement">Announcement</option>
                        <option value="Guide">Guide</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <!-- Content Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-align-left"></i> Content</div>
            </div>

            <div class="form-group form-row full">
                <label for="content">Post Content <span class="required">*</span></label>
                <input type="hidden" name="content" id="content" />
                <div id="quill-editor" style="min-height:300px;background:#fff;color:#000;border-radius:6px;overflow:hidden;"></div>
                <div class="help-text">Use the rich editor to format your content with styles, images, and more</div>
            </div>

            <div class="form-group form-row full">
                <label for="description">Meta Description (SEO)</label>
                <textarea id="description" name="description" placeholder="Brief description for search engines (max 160 characters)"></textarea>
                <div class="help-text">Appears in search results. Keep under 160 characters for best display.</div>
            </div>

            <div class="form-group form-row full">
                <label for="excerpt">Post Excerpt</label>
                <textarea id="excerpt" name="excerpt" placeholder="Short preview of your post (shown in lists)"></textarea>
                <div class="help-text">Appears in post listings and on homepage</div>
            </div>

            <!-- Media Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-images"></i> Media</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="image">Featured Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                    <div class="help-text">Recommended size: 800x600px</div>
                    <div id="imagePreview" class="image-preview" style="display:none;"></div>
                </div>

                <div class="form-group">
                    <label for="featured_image">Featured Image URL (Alternative)</label>
                    <input type="url" id="featured_image" name="featured_image" placeholder="https://example.com/image.jpg">
                    <div class="help-text">Use if uploading an image file</div>
                </div>
            </div>

            <div class="form-group form-row full">
                <label for="video">Video URL (Optional)</label>
                <input type="url" id="video" name="video" placeholder="https://youtube.com/watch?v=... or your video URL">
                <div class="help-text">Embed YouTube, Vimeo, or direct video links</div>
            </div>

            <!-- SEO & Metadata Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-search"></i> SEO & Tags</div>
            </div>

            <div class="form-group form-row full">
                <label for="tags">Tags (comma-separated)</label>
                <input type="text" id="tags" name="tags" placeholder="e.g., javascript, web-development, tutorial">
                <div class="help-text">Separate multiple tags with commas for better categorization</div>
            </div>

            <!-- Publishing Options -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-calendar-alt"></i> Publishing</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="status">Publish Status</label>
                    <select id="status" name="status">
                        <option value="published">Published</option>
                        <option value="draft">Draft (Not visible to public)</option>
                    </select>
                    <span class="badge badge-info">Published posts appear on your site immediately</span>
                </div>

                <div class="form-group">
                    <label for="scheduled_at">Schedule Publish (Optional)</label>
                    <input type="datetime-local" id="scheduled_at" name="scheduled_at">
                    <div class="help-text">Leave empty to publish immediately</div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Publish Post
                </button>
                <a href="/16192224" class="btn btn-secondary" style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
  </div>
</main>

    <!-- Image Preview Script -->
    <script>
        document.getElementById('image').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview">';
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Form validation on submit
        document.getElementById('addPostForm').addEventListener('submit', function(e) {
                const title = document.getElementById('title').value.trim();
                const contentEl = document.getElementById('content');
                const html = quill.root.innerHTML.trim();
                contentEl.value = html;

                if (!title) {
                    e.preventDefault();
                    alert('Please enter a post title');
                    return false;
                }

                if (!html || html === '<p><br></p>' || html === '<p></p>') {
                    e.preventDefault();
                    alert('Please enter some content');
                    return false;
                }
        });
    </script>

        <!-- Quill Editor -->
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script>
          var quill = new Quill('#quill-editor', {
            theme: 'snow',
            modules: { toolbar: [['bold','italic','underline'], [{ 'header': [1,2,3,false] }], ['link','image','code-block'], [{ list: 'ordered' }, { list: 'bullet' }]] }
          });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <%- include('footer') %>