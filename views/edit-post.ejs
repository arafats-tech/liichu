<%- include('meta', { currentPage: 'admin' }) %>
<%- include('header') %>

<main role="main">
  <div class="admin-container container">
    <div class="admin-header">
      <h1 class="admin-title"><i class="fas fa-edit"></i> Edit Post</h1>
      <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>

    <form action="/16192224/edit/<%= post.id %>" method="POST" enctype="multipart/form-data" id="editPostForm">
            
            <!-- Basic Info Section -->
            <div class="section-title"><i class="fas fa-info-circle"></i> Basic Information</div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="title">Post Title <span class="required">*</span></label>
                    <input type="text" id="title" name="title" value="<%= post.title %>" required>
                </div>
                
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="General" <% if(post.category === 'General') { %>selected<% } %>>General</option>
                        <option value="Technology" <% if(post.category === 'Technology') { %>selected<% } %>>Technology</option>
                        <option value="Tutorial" <% if(post.category === 'Tutorial') { %>selected<% } %>>Tutorial</option>
                        <option value="News" <% if(post.category === 'News') { %>selected<% } %>>News</option>
                        <option value="Review" <% if(post.category === 'Review') { %>selected<% } %>>Review</option>
                        <option value="Announcement" <% if(post.category === 'Announcement') { %>selected<% } %>>Announcement</option>
                        <option value="Guide" <% if(post.category === 'Guide') { %>selected<% } %>>Guide</option>
                        <option value="Other" <% if(post.category === 'Other') { %>selected<% } %>>Other</option>
                    </select>
                </div>
            </div>

            <!-- Content Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-align-left"></i> Content</div>
            </div>

            <div class="form-group form-row full">
                <label for="content">Post Content <span class="required">*</span></label>
                <input type="hidden" name="content" id="content" />
                <div id="quill-editor" style="min-height:300px;background:#fff;color:#000;border-radius:6px;overflow:hidden;"></div>
            </div>

            <div class="form-group form-row full">
                <label for="description">Meta Description (SEO)</label>
                <textarea id="description" name="description" placeholder="Brief description for search engines"><%= post.description || '' %></textarea>
                <div class="help-text">Appears in search results. Keep under 160 characters.</div>
            </div>

            <div class="form-group form-row full">
                <label for="excerpt">Post Excerpt</label>
                <textarea id="excerpt" name="excerpt" placeholder="Short preview of your post"><%= post.excerpt || '' %></textarea>
                <div class="help-text">Appears in post listings</div>
            </div>

            <!-- Media Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-images"></i> Media</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="image">Featured Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                    <div class="help-text">Recommended size: 800x600px</div>
                    <% if (post.image) { %>
                        <div class="image-preview">
                            <img src="<%= post.image %>" alt="Current image">
                        </div>
                        <p style="color: #aaa; font-size: 0.85em; margin-top: 5px;">Current: <%= post.image %></p>
                    <% } %>
                </div>

                <div class="form-group">
                    <label for="featured_image">Featured Image URL (Alternative)</label>
                    <input type="url" id="featured_image" name="featured_image" value="<%= post.featured_image || '' %>" placeholder="https://example.com/image.jpg">
                </div>
            </div>

            <div class="form-group form-row full">
                <label for="video">Video URL (Optional)</label>
                <input type="url" id="video" name="video" value="<%= post.video || '' %>" placeholder="https://youtube.com/watch?v=...">
                <div class="help-text">Embed YouTube, Vimeo, or direct video links</div>
            </div>

            <!-- SEO & Metadata Section -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-search"></i> SEO & Tags</div>
            </div>

            <div class="form-group form-row full">
                <label for="tags">Tags (comma-separated)</label>
                <input type="text" id="tags" name="tags" value="<%= post.tags || '' %>" placeholder="e.g., javascript, web-development">
                <div class="help-text">Separate multiple tags with commas</div>
            </div>

            <!-- Publishing Options -->
            <div class="section-divider">
                <div class="section-title"><i class="fas fa-calendar-alt"></i> Publishing</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="status">Publish Status</label>
                    <select id="status" name="status">
                        <option value="published" <% if(post.status === 'published') { %>selected<% } %>>Published</option>
                        <option value="draft" <% if(post.status === 'draft') { %>selected<% } %>>Draft (Not visible)</option>
                    </select>
                    <span class="badge badge-info">Published posts appear on your site</span>
                </div>

                <div class="form-group">
                    <label for="scheduled_at">Schedule Publish (Optional)</label>
                    <input type="datetime-local" id="scheduled_at" name="scheduled_at" value="<%= post.scheduled_at ? post.scheduled_at.toISOString().slice(0, 16) : '' %>">
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Post
                </button>
                <a href="/16192224" class="btn btn-secondary" style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a href="/16192224/delete/<%= post.id %>" class="btn btn-danger" style="text-decoration: none; display: flex; align-items: center; justify-content: center;" onclick="return confirm('Are you sure you want to delete this post?');">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </form>
  </div>
</main>

    <!-- Image Preview Script -->
    <script>
        document.getElementById('image').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    if (!preview) {
                        const div = document.createElement('div');
                        div.id = 'imagePreview';
                        div.className = 'image-preview';
                        document.querySelector('[for="image"]').parentNode.appendChild(div);
                    }
                    document.getElementById('imagePreview').innerHTML = '<img src="' + e.target.result + '" alt="Preview">';
                };
                reader.readAsDataURL(file);
            }
        });

        // Initialize Quill with existing content
        var quill = null;
        document.addEventListener('DOMContentLoaded', function() {
            quill = new Quill('#quill-editor', { theme: 'snow', modules: { toolbar: [['bold','italic','underline'], [{ 'header': [1,2,3,false] }], ['link','image','code-block'], [{ list: 'ordered' }, { list: 'bullet' }]] } });
            // set existing content
            quill.root.innerHTML = `<%= post.content.replace(/`/g, '\`') %>`;
        });

        // Form validation on submit
        document.getElementById('editPostForm').addEventListener('submit', function(e) {
            const title = document.getElementById('title').value.trim();
            const contentEl = document.getElementById('content');
            const html = quill.root.innerHTML.trim();
            contentEl.value = html;

            if (!title) {
                e.preventDefault();
                alert('Please enter a post title');
                return false;
            }

            if (!html || html === '<p><br></p>' || html === '<p></p>') {
                e.preventDefault();
                alert('Please enter some content');
                return false;
            }
        });
    </script>

    <!-- Quill Editor -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<%- include('footer') %>